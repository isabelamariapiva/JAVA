Ex01
import java.util.ArrayList;
import java.util.Scanner;

public class ArrayList1 {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        ArrayList<String> palavras = new ArrayList<>();

        System.out.println("Digite 10 palavras:");
        for (int i = 0; i < 10; i++) {
            palavras.add(ler.nextLine());
        }
        
        palavras.removeIf(p -> p.length() < 4);

        System.out.println("Palavras com 4 ou mais letras:");
        for (String palavra : palavras) {
            System.out.println(palavra);
        }

        ler.close();
    }
}



Ex02
import java.util.ArrayList;
import java.util.Scanner;
public class ArrayList2{
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        ArrayList<String> nomes = new ArrayList<>();

        System.out.println("Digite 5 nomes:");
        for (int i = 0; i < 5; i++) {
            nomes.add(ler.nextLine());
        }

        System.out.println("Nomes na ordem inversa:");
        for (int i = nomes.size() - 1; i >= 0; i--) {
            System.out.println(nomes.get(i));
        }

        ler.close();
    }
}

Ex03
import java.util.ArrayList;
public class ArrayList3 {
    public static void main(String[] args) {
        ArrayList<Integer> pares = new ArrayList<>();

        int num = 2;
        while (pares.size() < 20) {
            pares.add(num);
            num += 2;
        }

        pares.removeIf(n -> n % 4 == 0);

        System.out.println("Números pares não divisíveis por 4:");
        for (int n : pares) {
            System.out.println(n);
        }
    }
}


Ex04
import java.util.ArrayList;
import java.util.Scanner;
public class ArrayList4 {
    public static void main(String[] args) {
        Scanner ler= new Scanner(System.in);
        ArrayList<Double> notas = new ArrayList<>();

        System.out.println("Digite as notas dos alunos:");
        for (int i = 0; i < 5; i++) {
            double nota = Double.parseDouble(ler.nextLine());
            notas.add(nota);
        }

        double soma = 0;
        for (double nota : notas) {
            soma += nota;
        }

        double media = soma / notas.size();
        System.out.println("Média das notas: " + media);

        int AcimaMedia = 0;
        for (double nota : notas) {
            if (nota > media) AcimaMedia++;
        }

        System.out.println("Notas acima da média: " + AcimaMedia);
        ler.close();
    }

}

Ex05
import java.util.ArrayList;
import java.util.Scanner;

public class ArrayList5 {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        System.out.println("Digite uma frase:");
        String frase = ler.nextLine();

        String[] palavrasArray = frase.split("\\s+");
        ArrayList<String> palavras = new ArrayList<>();
        for (String p : palavrasArray) {
            palavras.add(p);
        }

        System.out.println("Quantidade de palavras: " + palavras.size());

        System.out.println("Palavras que começam com 'A':");
        for (String p : palavras) {
            if (p.toUpperCase().startsWith("A")) {
                System.out.println(p);
            }
        }
        ler.close();
    }
}


Ex06
import java.util.ArrayList;
import java.util.Collections;
import java.util.Random;

public class ArrayList6 {
    public static void main(String[] args) {
        ArrayList<Integer> numeros = new ArrayList<>();
        Random random = new Random();

        for (int i = 0; i < 10; i++) {
            numeros.add(random.nextInt(100) + 1);
        }

        Collections.sort(numeros);

        System.out.println("Números ordenados:");
        for (int n : numeros) {
            System.out.println(n);
        }
    }
}


Ex07
import java.util.ArrayList;
import java.util.Scanner;

public class ArrayList7 {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        ArrayList<Integer> numeros = new ArrayList<>();

        System.out.println("Digite números (-1 para sair):");
        while (true) {
            int n = Integer.parseInt(ler.nextLine());  // nextLine + parse
            if (n == -1) break;
            numeros.add(n);
        }

        if (numeros.isEmpty()) {
            System.out.println("Nenhum número foi digitado.");
        } else {
            int maior = numeros.get(0);
            int menor = numeros.get(0);

            for (int num : numeros) {
                if (num > maior) maior = num;
                if (num < menor) menor = num;
            }

            System.out.println("Maior número: " + maior);
            System.out.println("Menor número: " + menor);
        }
        ler.close();
    }
}

Ex08
import java.util.ArrayList;
import java.util.Scanner;

public class ArrayList8 {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        ArrayList<String> produtos = new ArrayList<>();
        ArrayList<Double> precos = new ArrayList<>();

        System.out.println("Digite 5 produtos e seus preços:");
        for (int i = 0; i < 5; i++) {
            System.out.print("Produto: ");
            produtos.add(ler.nextLine());
            System.out.print("Preço: ");
            precos.add(Double.parseDouble(ler.nextLine()));  // nextLine + parse
        }

        System.out.println("Produtos com preço superior a R$ 50,00:");
        for (int i = 0; i < produtos.size(); i++) {
            if (precos.get(i) > 50.0) {
                System.out.println(produtos.get(i) + " - R$ " + precos.get(i));
            }
        }
        ler.close();
    }
}


Ex09
import java.util.ArrayList;
import java.util.Scanner;
public class ArrayList9 {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        ArrayList<Integer> lista = new ArrayList<>();

        System.out.println("Digite alguns números inteiros (digite -1 para parar):");
        while (true) {
            int num = ler.nextInt();
            if (num == -1) 
                break;
        }

      
        for (int i = 1; i <= 10; i++) {
            lista.add(i);
        }

        
        System.out.println("Elementos multiplicados por 2:");
        for (int num : lista) {
            System.out.println(num * 2);
        }

        ler.close();
    }
}



Ex10
import java.util.ArrayList;
import java.util.Scanner;

public class ArrayList10 {
    public static void main(String[] args) {
        Scanner ler = new Scanner(System.in);
        ArrayList<String> tarefas = new ArrayList<>();
        String comando;

        while (true) {
            System.out.println("\nDigite um comando: add, remove, listar, sair");
            comando = ler.nextLine().toLowerCase();

            if (comando.equals("add")) {
                System.out.println("Digite a tarefa para adicionar:");
                String tarefa = ler.nextLine();
                tarefas.add(tarefa);
                System.out.println("Tarefa adicionada.");
            } else if (comando.equals("remove")) {
                System.out.println("Digite o nome da tarefa para remover:");
                String tarefa = ler.nextLine();
                if (tarefas.remove(tarefa)) {
                    System.out.println("Tarefa removida.");
                } else {
                    System.out.println("Tarefa não encontrada.");
                }
            } else if (comando.equals("listar")) {
                System.out.println("Tarefas atuais:");
                for (String t : tarefas) {
                    System.out.println("- " + t);
                }
            } else if (comando.equals("sair")) {
                System.out.println("Encerrando programa.");
                break;
            } else {
                System.out.println("Comando inválido.");
            }
        }
        ler.close();
    }
}




